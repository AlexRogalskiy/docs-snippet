{
  "vitest.enable": true,
  "vitest.include": ["tests/**/*.spec.ts"],
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .editorconfig, .gitignore, .npmrc, pnpm-workspace.yaml, tsconfig.json",
    "README.md": "LICENSE.md, CONDUCT.md"
  }
}
